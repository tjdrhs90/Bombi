<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b2c7da"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearlayout_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerview_item_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="이름"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recyclerview_item_room_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/recyclerview_item_room_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/recyclerview_item_room_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="2011.11.11 11:11"
            android:textSize="10dp" />

    </LinearLayout>


</LinearLayout>